

<div style="width: 100%;display: flex; flex-wrap: wrap;">
    @foreach (string s in Tags.Where(t => !string.IsNullOrEmpty(t)))
    {
        <table style="margin:0 5px 0 5px">
            <tr>
                <td class="blog-tag">@s</td>
               @if (IsAdmin)
               {
                   <td><span class="hover-pointer" style="color:white;background:red;font-size:18px" @onclick="@(e => RemoveTagClicked(s))">❌</span></td>
               }
            </tr>
        </table>
    }
</div>

@code {
    [Parameter]
    public List<string> Tags { get; set; }

    [Parameter]
    public bool IsAdmin { get; set; }

    [Parameter]
    public Action<string> OnRemoveTag { get; set; }

    private void RemoveTagClicked(string tag)
    {
        OnRemoveTag?.Invoke(tag);
    }
}
