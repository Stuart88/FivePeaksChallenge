@page "/"
@using FivePeaks.Client.Helpers
@inject NavigationManager NavigationManager

<PageBase ImageNum="5">
    <div id="home-page-text-area" class="white-opaque-box info-area-min-width">

        <img style="max-height:100px;max-width:100px" src="@ServerHelpers.ImageSrcString("icons/logo.png")" />

        <h1 class="page-title">The Five Peaks Challenge</h1>

        <div class="text-area-general" style="font-size: 20px; font-weight: bold; max-width: 500px; text-align: center;margin:auto">
            <p style="font-weight:normal">
                Yorkshire Dales newest and most exclusive challenge
            </p>
            <Divider></Divider>
            <table class="home-info-table">
                <tr class="home-info-table-row">
                    <td class="home-info-table-label">Total Length</td>
                    <td class="home-info-table-text">41km</td>
                </tr>
                <tr class="home-info-table-row">
                    <td class="home-info-table-label">Total Ascent</td>
                    <td class="home-info-table-text">1500m</td>
                </tr>
                <tr class="home-info-table-row">
                    <td class="home-info-table-label">Total Peaks</td>
                    @if (_smallScreen)
                    {
                        <td class="home-info-table-text">5</td>
                    }
                    else
                    {
                        <td class="home-info-table-text">Five of the Yorkshire Dale's Top 10 Tallest</td>
                    }
                </tr>
                <tr>
                    <td colspan="2">
                        <table style="width: 242px;margin:auto">
                            <tr style="border:2px solid black" class="home-info-table-row">
                                <td class="home-info-table-label" colspan="2">Target Time</td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black" class="home-info-table-text">Under 12 hrs</td>
                                <td style="border:2px solid black" class="home-info-table-text">Pro</td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black" class="home-info-table-text">Under 10 hrs</td>
                                <td style="border:2px solid black" class="home-info-table-text">Elite</td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black" class="home-info-table-text">Under 8 hrs</td>
                                <td style="border:2px solid black" class="home-info-table-text">Unhuman</td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black" class="home-info-table-text">Under 6 hrs</td>
                                <td style="border:2px solid black" class="home-info-table-text">Godlike</td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black" class="home-info-table-text">Under 4 hrs</td>
                                <td style="border:2px solid black" class="home-info-table-text">UNREAL</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            
            <table @onclick="@(() => NavigationManager.NavigateTo("/account"))">
                <tr>
                    <td>
                        <MenuIcon FileName="user.png" />
                    </td>
                    <td>
                        <div class="home-info-section-title">
                            Click <NavLink href="/account">here</NavLink> to login and submit your own leaderboard entry!
                        </div>
                    </td>
                </tr>
            </table>

            <div>

                <img @onclick="@(() => NavigationManager.NavigateTo("/maps"))" class="img-fluid rounded" style="margin: 20px auto" src="@ServerHelpers.ImageSrcString($"siteimages/full-route.jpg")" />
                <table @onclick="@(() => NavigationManager.NavigateTo("/maps"))">
                    <tr>
                        <td>
                            <MenuIcon FileName="map.png" />
                        </td>
                        <td>
                            <div class="home-info-section-title">
                                For maps and GPX data, go to the <NavLink href="/maps">maps page</NavLink>
                            </div>
                        </td>
                    </tr>
                </table>
                <table @onclick="@(() => NavigationManager.NavigateTo("/route"))">
                    <tr>
                        <td>
                            <MenuIcon FileName="route.png" />
                        </td>
                        <td>
                            <div class="home-info-section-title">
                                For a detailed route guide, have a look at the <NavLink href="/route">route page</NavLink>
                            </div>
                        </td>
                    </tr>
                </table>
                <table @onclick="@(() => NavigationManager.NavigateTo("/thepeaks"))">
                    <tr>
                        <td>
                            <MenuIcon FileName="peaks.png" />
                        </td>
                        <td>
                            <div class="home-info-section-title">
                                You can know more about each of the peaks on the <NavLink href="/thepeaks">peaks page</NavLink>
                            </div>
                        </td>
                    </tr>
                </table>
                <table @onclick="@(() => NavigationManager.NavigateTo("/leaderboard"))">
                    <tr>
                        <td>
                            <MenuIcon FileName="trophy.png" />
                        </td>
                        <td>
                            <div class="home-info-section-title">
                                See fastest times (or submit your own) via the <NavLink href="/leaderboard">leaderboard page</NavLink>
                            </div>
                        </td>
                    </tr>
                </table>
                <table @onclick="@(() => NavigationManager.NavigateTo("/weather"))">
                    <tr>
                        <td>
                            <MenuIcon FileName="weather.png" />
                        </td>
                        <td>
                            <div class="home-info-section-title">
                                Check the latest weather forecast on the <NavLink href="/weather">weather page</NavLink>
                            </div>
                        </td>
                    </tr>
                </table>
                <table @onclick="@(() => NavigationManager.NavigateTo("/gallery"))">
                    <tr>
                        <td>
                            <MenuIcon FileName="gallery.png" />
                        </td>
                        <td>
                            <div class="home-info-section-title">
                                Finally, don't forget to take a look at our photos on the <NavLink href="/gallery">gallery page</NavLink>
                            </div>
                        </td>
                    </tr>
                </table>

            </div>
        </div>
    </div>
</PageBase>


@code{

    bool _smallScreen;


    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _smallScreen = ScreenSizeHelper.IsSmallScreen;
        }
    }

    protected override void OnInitialized()
    {
        _smallScreen = ScreenSizeHelper.IsSmallScreen;
    }

}